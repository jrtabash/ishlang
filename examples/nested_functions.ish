(def incrementN (x n)
  (def add1 (x)
    (+ x 1))

  (var sum x)
  (loop (var i 0) (< i n) (= i (+ i 1))
    (= sum (add1 sum)))
  sum)

(def incrementN2 (x n)
 (var sum x)

 (def inc ()
   (= sum (+ sum 1)))

 (loop (var i 0) (< i n) (= i (+ i 1))
   (inc))

 sum)

(print "incrementN(10, 5): ")
(println (incrementN 10 5))

(print "incrementN2(10, 5): ")
(println (incrementN2 10 5))
