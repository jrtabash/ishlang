(defun array_max (arr)
  (var amax 0)
  (when (> (arrlen arr) 0)
    (progn
      (= amax (arrget arr 0))
      (foreach x arr
        (when (> x amax)
          (= amax x)))))
  amax)

(defun test (ints)
  (var m (array_max ints))
  (println "arr: " ints)
  (println "max: " m)
  (println "pos: " (arrfind ints m)))

(test (array -5 1 10 -8 2 9 5 3 -2 4))
(test (array -5 -3 -10 -4 -6))
